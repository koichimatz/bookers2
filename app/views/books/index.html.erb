<%= render 'users/user', user:@users, new_book:@book %>
<div class="col-md-8 offset-md-1">
            <h1>Books</h1>
            <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Title</th>
                    <th>Opinion</th>
                    <th colspan="3"></th>
                  </tr>
                </thead>

                <tbody>
                    <% @books.each do |book| %>
                    <tr>
                        <td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
                        <td><%= link_to 'book.name', book %></td>
                        <td><%= link_to 'book.opinion' %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>