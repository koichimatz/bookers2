<h1>Editing Book</h1>
<%= form_with model:@book, local:true do |f| %>
    <label for="inpuTitle">Title</label>
    <%= f.text_field :title, autofocus: true, id:"inputName", placeholder:""%>
    <%= f.text_field :opinion, autofocus: true, id:"inputOpinion", placeholder:""%>
    <%= f.submit"Update Book" %>
    <%= link_to "Show", book_path %>|<%= link_to "Back", books_path %>
<% end %>
