<h1>Books</h1>
<% @books.each do |book| %>
    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
    <p>Title</p>
    <%= @book.title %>
    <p>Opinion</p>
    <%= @book.opinion %>
    <span><%= user.name %></span>
    <%= link_to "Show", user_path(@user.id) %>
<% end %>